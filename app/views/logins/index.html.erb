<div style="background-color: #f5f5f5" height="800" width="100%" >
<table style="background-color: #f5f5f5"  height= "95%" width="100%" class="login"  >
    <%= form_tag(:url => 'login/create') do %>
      <tr colspan="2" height="50"></tr>
     <tr><td></td> <td style="font-size: medium;" height="30">Sign in</td></tr>
      <tr rowspan="3"></tr>
     <tr><td></td><td> <label for="name" ><b>Username</b></label></td></tr>


    <tr><td></td><td><%= text_field_tag('userName') %></td> </tr>


    <tr><td></td><td>

        <label for="password" ><b>Password</b></label>
    </td></tr>
    <tr><td></td><td>
        <%= password_field_tag('password') %>
    </td></tr>

    <tr>
      <td></td>
      <td>
        <div id="comment-form">
            <div id="comment-button"><p>
                <%=image_submit_tag("signin.png", :alt => 'Sign-In' ) %></p>
                <p id="error" style="font-size: 30; color: red"><b><%= notice %></b></p>
                </div>
        </div>
      </td>
    </tr>
   <% end %>

  <tr><td></td><td><%= link_to image_tag("create.png", :alt => 'create-account'), new_user_path %></td></tr>
  <tr rowspan="10" height="300"></tr>
</table>


</div>