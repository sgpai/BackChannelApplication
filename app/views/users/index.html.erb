<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Password</th>
    <th>Email</th>
    <th>Logintype</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.userName %></td>
    <td><%= user.password %></td>
    <td><%= user.email %></td>
    <td><%= user.loginType %></td>
    <td><%= link_to image_tag("/assets/edit-icon.png", :alt => 'edit-icon-' + user.id.to_s() ), edit_user_path(user) %></td>
    <td></td>
    <td><%= link_to image_tag("/assets/delete-icon.png", :alt => 'delete-icon-' + user.id.to_s() ), user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

